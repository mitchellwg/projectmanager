@model ProjectManager.Models.Projects.ProjectModel

@{
    <script type="text/javascript" src="@Url.Content("/Scripts/App/Projects/ViewProject.js")"></script>
}

<div>
    <div>
        <h2>@Model.Name</h2>
    </div>


    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-horizontal">
                <fieldset>
                    <br />
                    <div class="form-group">
                        <div class="col-sm-2">
                            <label class="control-label">Start Date: </label>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" id="txtStartDate" class="form-control" value="@Model.StartDate" readonly />
                        </div>



                        <div class="col-sm-2">
                            <label class="control-label">End Date: </label>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" id="txtEndDate" class="form-control" value="@Model.EndDate" readonly />
                        </div>

                        <div class="col-sm-2">
                            <label class="control-label">Cost: </label>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" id="txtCost" class="form-control" value="@Model.Cost" readonly />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2">
                            <label class="control-label">Company Code: </label>
                        </div>
                        <div class="col-sm-2">
                            @*<input type="text" id="txtCompany" class="form-control" value="@Model.company" readonly />*@
                        </div>

                        <div class="col-sm-2">
                            <label class="control-label">Client: </label>
                        </div>
                        <div class="col-sm-2">
                            @*<input type="text" id="txtClient" class="form-control" value="@Model.client" readonly />*@
                        </div>

                        <div class="col-sm-2">
                            <label class="control-label">Region: </label>
                        </div>
                        <div class="col-sm-2">
                            @*<input type="text" id="txtRegion" class="form-control" value="@Model.region" readonly />*@
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2">
                            <label class="control-label">Description: </label>
                        </div>
                        <div class="col-sm-2">
                            @*<textarea id="txtDescription" rows="4" class="form-control" readonly>@Model.company</textarea>*@
                        </div>

                        <div class="col-sm-2">
                            <label class="control-label">PM: </label>
                        </div>
                        <div class="col-sm-2">
                            @*<input type="text" id="txtPM" class="form-control" value="@Model.PM" readonly />*@
                        </div>

                        <div class="col-sm-2">
                            <label class="control-label">Type: </label>
                        </div>
                        <div class="col-sm-2">
                            @*<input type="text" id="txtType" class="form-control" value="@Model.projectType" readonly />*@
                        </div>
                    </div>









                </fieldset>
            </div>
        </div>
    </div>

    @*Lessons Table*@

    <div>
        <div>
            <button id="btnLinkLesson" data-toggle="modal" data-target="#linkLessonModal" class="btn btn-default pull-right"><i class="fa fa-plus"></i>Link Lesson</button>
            <h2>Lessons</h2>
        </div>
        <div class="panel panel-default ">
            <div class="panel-body text-sm">
                <table id="tblLessons" style="width: 100%;" class="table table-striped table-hover table-responsive">
                    <thead>
                        <tr class="panel-heading">
                            @*@{
                                var tempLesson = new DLL.Classes.LessonModel();
                                foreach (var heading in (tempLesson.LessonsTableheaders))
                                {
                                    <th class="panel-heading">@heading</th>

                                }
                            }*@
                        </tr>
                    </thead>
                    <tbody>
                        @*@{
                            foreach (var lesson in Model.linkedLessons)
                            {
                                <tr>
                                    <td>
                                        @lesson.id
                                    </td>
                                    <td>
                                        @lesson.pc
                                    </td>
                                    <td>
                                        @lesson.phase
                                    </td>
                                    <td>
                                        @lesson.title
                                    </td>
                                    <td>
                                        @lesson.remarks
                                    </td>


                                </tr>
                            }
                        }*@
                    </tbody>
                </table>
            </div>
        </div>






        @* ---------------------------------------  Modal ---------------------------------------  *@
        <div class="modal fade" role="dialog" tabindex="-1" aria-hidden="true" id="linkLessonModal" aria-labelledby="modalHeader">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 id="modalHeader" class="modal-title">Link Lesson</h4>
                    </div>
                    <div class="modal-body">
                       <select class="form-control" id="ddlLessonsToLink" ></select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button id="btnLink" type="button" class="btn btn-primary">Link</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

    </div>
</div>



