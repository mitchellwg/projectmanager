@model IEnumerable<ProjectManager.Models.Projects.ProjectModel>
@{
    ViewBag.Title = "Projects";
}

@section scripts
{
    <script type="text/javascript" src="@Url.Content("/Scripts/App/Projects/Projects.js")"></script>
}
<div>
    <div>
        <a href="/projects/New" id="aCreateProject" style="float:right;" class="btn btn-default"><i class="fa fa-plus"></i> New</a>
        <h2>Projects</h2>
    </div>
    <div class="panel panel-default ">
        <div class="panel-body text-sm">
            <table id="tblProjects" style="width: 100%;" class="table table-striped table-hover table-responsive">
                <thead>
                    <tr class="panel-heading">
                        <th class="panel-heading">@Html.DisplayNameFor(m => m.Name)</th>
                        <th class="panel-heading">@Html.DisplayNameFor(m => m.StartDate)</th>
                        <th class="panel-heading">@Html.DisplayNameFor(m => m.EndDate)</th>
                        <th class="panel-heading">@Html.DisplayNameFor(m => m.Cost)</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var project in Model)
                        {
                            <tr>
                                <td>
                                    @project.Name
                                </td>
                                @*<td>
                                    @project.projectType
                                </td>
                                <td>*@
                                    @*@project.region
                                </td>*@
                                @*<td>
                                    @project.company
                                </td>
                                <td>
                                    @project.PM
                                </td>*@
                                <td>
                                    @project.StartDate
                                </td>
                                <td>
                                    @project.EndDate
                                </td>
                                <td>
                                    @project.Cost
                                </td>
                                <td class="text-center">
                                    <a title="View" href="/projects/ViewProject/@project.Id" id="aViewProject" class="btn btn-default"><i class="fa fa-eye"></i></a>
                                    <a title="Edit" href="/projects/Edit/@project.Id" id="aEditProject" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                                    <button title="Delete" id="btnDelete_@project.Id" onclick="Delete(@project.Id)" class="btn btn-danger"><i class="fa fa-times"></i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>



</div>