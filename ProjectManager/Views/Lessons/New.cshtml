@model ProjectManager.Models.Lessons.LessonModel

@section scripts
{
    <script type="text/javascript" src="@Url.Content("/Scripts/App/Lessons/NewLesson.js")"></script>
}

<div>
    <div>
        <h2>New Lesson</h2>
    </div>


    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-horizontal">
                <fieldset>
                    <br />
                    <div class="form-group">
                        <div class="col-md-2">
                            <label class="control-label">Title: </label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" id="txtTitle" class="form-control" placeholder="Lesson title..." />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            <label class="control-label">P/C: </label>
                        </div>
                        <div class="col-md-3">
                            <textarea id="txtPc" class="form-control" placeholder="P/C..."></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            <label class="control-label">Phase: </label>
                        </div>
                        <div class="col-md-3">
                            <select id="ddlPhases" class="form-control">
                                <option style="display:none;" value="" disabled selected>Select your option...</option>
                                @*@{
                                    foreach (var phase in Model.phases)
                                    {
                                        <option value="@phase.id">@phase.id</option>
                                    }
                                }*@
                            </select>

                        </div>
                    </div>

                    


                    <div class="form-group">
                        <div class="col-md-2">
                            <label class="control-label">Remarks: </label>
                        </div>
                        <div class="col-md-3">
                            <textarea id="txtRemarks" class="form-control" placeholder="Remarks..."></textarea>
                        </div>
                    </div>

                    

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-3" align="right">
                            <button class=" btn btn-default" onclick="Cancel()">
                                Cancel
                            </button>
                            <button class="btn btn-primary" onclick="Save()"><i class="fa fa-check"></i> Create Lesson</button>

                        </div>
                    </div>

                </fieldset>




            </div>
        </div>
    </div>

</div>
