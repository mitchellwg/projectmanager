<!DOCTYPE html>
<html lang="en">
@{
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/theme_Main.css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap-js")
    @Scripts.Render("~/bundles/utilities-js")
    @RenderSection("scripts", required: false)
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
</head>

<body>

    <div id="wrapper">
        <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0;background-color: steelblue; border-bottom-color: dodgerblue ">
            <div class="navbar-header">
                @Html.ActionLink("Project Manager", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                        @User.Identity.Name
                    </a>

                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="@Url.Action("MyProfile", "Account")"><i class="fa fa-user fa-fw"></i> My Profile</a>
                        </li>
                        <li>
                            <a href="@Url.Action("LogOff", "Account")"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>

        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="@Url.Action("Index", "Projects")"><i class="fa fa-bar-chart-o fa-fw"></i>Projects</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Account")"><i class="fa fa-users fa-fw"></i>Accounts</a>
                    </li>
                </ul>
            </div>
        </div>

        <section class="main-content clear-fix content-wrapper">
            @RenderBody()
        </section>
    </div>
</body>

</html>
